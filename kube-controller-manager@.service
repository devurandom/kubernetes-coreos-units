[Unit]
Description=Kubernetes Controller Manager v%i
Documentation=https://github.com/GoogleCloudPlatform/kubernetes
Requires=kube-apiserver@%i.service
After=kube-apiserver@%i.service

[Service]
EnvironmentFile=/etc/kube-config.env
ExecStartPre=/opt/bin/curl-update-binary /opt/bin/kube-controller-manager https://storage.googleapis.com/kubernetes-release/release/v%i/bin/linux/amd64/kube-controller-manager
ExecStart=/opt/bin/kube-controller-manager \
  --v=3 \
  --logtostderr=true \
  --service_account_private_key_file=/opt/share/kube/kube-serviceaccount.key \
  --master=127.0.0.1:${KUBE_MASTER_PORT}
Restart=always
RestartSec=10

[X-Fleet]
MachineOf=kube-apiserver@%i.service
