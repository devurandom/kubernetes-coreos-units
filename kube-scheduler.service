[Unit]
Description=Kubernetes Scheduler
Documentation=https://github.com/GoogleCloudPlatform/kubernetes
Requires=kube-apiserver.service
After=kube-apiserver.service

[Service]
ExecStartPre=/opt/bin/curl-update-binary /opt/bin/kube-scheduler https://storage.googleapis.com/kubernetes-release/release/v0.19.3/bin/linux/amd64/kube-scheduler
ExecStart=/opt/bin/kube-scheduler --master=http://127.0.0.1:9090
Restart=always
RestartSec=10

[X-Fleet]
MachineOf=kube-apiserver.service
